<WindowMain>:
    orientation: 'vertical'
    Button:
        #size_hint: .5, .09
        size_hint: None, None
        size: 350, 50
        #pos_hint: {'x':.1, 'y':.1}
        center: root.width - self.width, root.height - self.height
        text: 'Update'
        on_press: root.on_press_bt()
<Picture>: # the "-" will tell kv to drop the rule inherited from Image.
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            texture: self.texture
            size: self.size + 20, self.height + 20
            pos: self.x - 10, self.y - 10